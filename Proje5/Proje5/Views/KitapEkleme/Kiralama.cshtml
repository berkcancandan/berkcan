@model Proje5.Models.Kayitlar

@{
    ViewBag.Title = "Kiralama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kiralama</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Kayitlar</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(model => model.Bkitapno, "Kitap No:", htmlAttributes: new { @class = "control-label col-md-1" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Bkitapno, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Bkitapno, "", new { @class = "text-danger" })
    </div>
</div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
